<head>
    <meta charset="UTF-8">
    <title>Decifrador de RPG - Brute Force</title>
    <style>
        body { background: #0d0d0d; color: #00ff41; font-family: 'Courier New', monospace; padding: 20px; text-align: center; }
        .container { border: 2px solid #00ff41; padding: 20px; display: inline-block; background: #000; box-shadow: 0 0 15px #00ff41; }
        input { background: #111; color: #00ff41; border: 1px solid #00ff41; padding: 10px; width: 80%; margin-bottom: 10px; }
        button { background: #00ff41; color: #000; border: none; padding: 10px 20px; font-weight: bold; cursor: pointer; margin: 5px; }
        button:hover { background: #fff; }
        #resultados { margin-top: 20px; text-align: left; max-height: 400px; overflow-y: auto; padding: 10px; border-top: 1px solid #333; }
        .linha { margin: 5px 0; font-size: 0.9em; }
        .destaque { color: #fff; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container">
        <h2>SISTEMA DE DESCRIPTOGRAFIA</h2>
        <p>Insira os números separados por espaço:</p>
        <input type="text" id="numeros" placeholder="Ex: 01 17 20 03 04 17">
        <br>
        <button onclick="bruteForce()">TESTAR TODOS OS PULOS (CÉSAR)</button>
        <div id="resultados"></div>
    </div>

    <script>
        function bruteForce() {
            let entrada = document.getElementById('numeros').value;
            let resDiv = document.getElementById('resultados');
            let nums = entrada.trim().split(/\s+/).map(Number);
            resDiv.innerHTML = "<strong>Resultados (Tentando todos os 26 deslocamentos):</strong><br><br>";

            for (let pulo = 0; pulo < 26; pulo++) {
                let palavra = "";
                nums.forEach(n => {
                    let c = (n + pulo - 1) % 26;
                    if (c < 0) c += 26;
                    palavra += String.fromCharCode(c + 65);
                });
                resDiv.innerHTML += `<div class="linha">Pulo ${pulo}: <span class="destaque">${palavra}</span></div>`;
            }
        }
    </script>
</body>
